    <article class="book">
        <h2><%= book.title %></h2><strong></strong>
        <p><strong>By: </strong><%= book.author %></p>
        <div class="img_container" >
          <img src=<%= book.image_url %> alt=<%= book.title %> ></img>
        </div>>
        <p><strong>Synopsis: </strong><%= book.description %></p>
        <p><strong>ISBN: </strong><%= book.isbn %></p>
        <p><strong>Category: </strong><%= book.bookshelf %></p>
        
        <form action="/books" method="POST">
          <fieldset>
            <input type="hidden" name="search" placeholder="search by title or author" required> 

              <label for='title'>
                <input type='hidden' name='title' value='<%= book.title %>'>
              </label>
              
              <label for='author'>
                <input type='hidden' name='author' value='<%= book.author %>'>
              </label>
              
              <label for='description'>
                <input type='hidden' name='description' value='<%= book.description %>'><br>
              </label>
              <label for='isbn'>
                <input type='hidden' name='isbn' value='<%= book.isbn %>'>
              </label>
              
              <label for='image_url'>
                <input type='hidden' name='image_url' value='<%= book.image_url %>'>
              </label>
              
              <label for='bookshelf'>
                <input type='hidden' name='bookshelf' value='<%= book.bookshelf %>'>
              </label>
            </fieldset>
            <button type='submit'>save book</button>
          </form>
        </article>